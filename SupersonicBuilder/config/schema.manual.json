{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sonic Manual Manifest",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "theme": {
      "type": "string",
      "enum": [
        "dark",
        "light"
      ]
    },
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "assets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "id",
          "title"
        ]
      }
    }
  },
  "required": [
    "title",
    "pages"
  ]
}